# ========================================
# Polymarket跟单机器人 - 环境变量配置
# 集成监控和交易功能 v2.0
# ========================================

# ===== 基础链上配置 =====
RPC_WSS_URL="wss://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY"
CTF_EXCHANGE_ADDRESS="0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E"
GAMMA_API_URL="https://gamma-api.polymarket.com"

# ===== 目标交易员配置 =====
# JSON格式列表，填写要跟单的交易员EOA地址
TARGET_TRADERS=["0xTraderEOA1", "0xTraderEOA2"]

# ===== Polymarket API配置 (交易执行用) =====
POLYMARKET_API_KEY="your_polymarket_api_key"
POLYMARKET_SECRET="your_polymarket_secret"
POLYMARKET_PASSPHRASE="your_polymarket_passphrase"
PROXY_WALLET_ADDRESS="0xYourProxyWalletAddress"

# CLOB API配置
CLOB_BASE_URL="https://clob.polymarket.com"

# ===== 交易策略配置 =====
COPY_RATIO=0.5              # 跟单比例 (0.1-1.0, 例如0.5表示跟单50%的金额)
ORDER_TIMEOUT=300           # 订单超时时间 (秒, 5分钟)
SIGNAL_EXPIRY=60            # 信号有效期 (秒, 1分钟)
MAX_ORDER_SIZE=10000        # 单笔订单上限 (USDC)
MIN_ORDER_SIZE=10           # 最小订单金额 (USDC)

# ===== 风险控制配置 =====
MAX_POSITION_SIZE=50000     # 最大持仓总金额 (USDC)
MIN_TRADE_RATIO=0.1        # 最小交易资金比例 (%), 低于此比例将跳过跟单
MAX_RETRY_ATTEMPTS=3        # API请求最大重试次数
RETRY_DELAY=1.0             # 重试延迟 (秒)

# ===== 监控配置 =====
ORDER_CHECK_INTERVAL=10     # 订单状态检查间隔 (秒)

# ===== 调试配置 =====
ENABLE_DRY_RUN=true         # 模拟交易模式 (true=模拟, false=实盘)
ENABLE_DEBUG_LOGGING=false  # 启用详细调试日志

# ===== 说明 =====
# 1. 首次使用建议设置 ENABLE_DRY_RUN=true 进行测试
# 2. 确保TARGET_TRADERS格式为JSON数组
# 3. API密钥从Polymarket官方获取: https://polymarket.com/settings/api
# 4. PROXY_WALLET_ADDRESS是你的Gnosis Safe代理钱包地址
# 5. 所有金额相关的数值请使用浮点数
# 6. 建议从较小的COPY_RATIO和MAX_ORDER_SIZE开始测试
# 7. MIN_TRADE_RATIO用于过滤小额交易，低于此比例的交易将被跳过