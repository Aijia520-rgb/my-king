# ========================================
# Polymarket套利机器人 - 环境变量配置
# 复用跟单项目的API配置格式
# ========================================

# ===== 钱包配置 =====
# 下单钱包模式切换
# 1 = 本地钱包模式（使用私钥直接签名）
# 2 = 代理钱包模式（使用代理钱包扣款，更安全）
WALLET_SWITCH=2

# 本地钱包私钥（64位十六进制字符串，不含0x前缀）
WALLET_PRIVATE_KEY=""

# 本地钱包地址（与私钥对应的以太坊地址）
LOCAL_WALLET_ADDRESS=""

# 代理钱包地址（持有资金的地址，用于实际扣款）
PROXY_WALLET_ADDRESS=""

# 网络链ID (137: Polygon主网, 80002: Amoy测试网)
CHAIN_ID=137

# ===== API配置 =====
CLOB_BASE_URL="https://clob.polymarket.com"
GAMMA_API_URL="https://gamma-api.polymarket.com"
DATA_API_URL="https://data-api.polymarket.com"
POLYGON_RPC_URL="https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY"

# ===== 套利参数配置 =====
# 最小利润阈值（0.005 = 0.5%）
MIN_PROFIT_THRESHOLD=0.005

# 最小交易金额（USDC）
MIN_TRADE_SIZE=10

# 最大交易金额（USDC）
MAX_TRADE_SIZE=500

# 单市场最大持仓（USDC）
MAX_POSITION_SIZE=1000

# 价格检查间隔（秒）
PRICE_CHECK_INTERVAL=2

# 订单超时时间（秒）
ORDER_TIMEOUT=30

# 最大滑点（0.01 = 1%）
MAX_SLIPPAGE=0.01

# ===== 风险控制配置 =====
# 总敞口上限（USDC）
MAX_TOTAL_EXPOSURE=5000

# 单市场敞口上限（USDC）
MAX_SINGLE_MARKET_EXPOSURE=1000

# 止损百分比
STOP_LOSS_PERCENT=5

# 日亏损限制（USDC）
DAILY_LOSS_LIMIT=200

# 最大并发持仓数
MAX_CONCURRENT_POSITIONS=10

# ===== 可选：指定监控的市场（逗号分隔）=====
# WATCH_MARKETS=market-slug-1,market-slug-2
